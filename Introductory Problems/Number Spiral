#include <bits/stdc++.h>
using namespace std;
 
int main() {
 
int t;
cin>>t;
while(t--)
{
    long long n,m;
    cin>>n>>m;
    if(n>m)
    {
        if(n%2==0)
        {
            cout<<n*n-m+1;
        }
        else
        {
            cout<<(n-1)*(n-1)+m;
        }
    }
    else
    {
        if(m%2!=0)
        {
            cout<<m*m-n+1;
        }
        else
        {
            cout<<(m-1)*(m-1)+n;
        }
 
        
    }
    
   
    cout<<endl;
    
}
 
 
	return 0;
}
